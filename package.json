    "react": "~16.13.0",
    "react-bootstrap": "~1.0.0-beta.16",
    "react-bootstrap-typeahead": "~4.2.0",
    "react-dom": "~16.13.0",
    "react-i18next": "~11.3.0",
    "react-redux": "~7.2.0",
    "react-router": "~5.1.2",
    "react-router-dom": "~5.1.2",
    "react-scripts": "~3.4.0",
    "redux": "~4.0.5",
    "redux-thunk": "~2.3.0",
    "shortid": "^2.2.15",
    "typescript": "~3.8.2",
    "uuid": "^7.0.1"
  },
  "repository": {
    "type": "git",
